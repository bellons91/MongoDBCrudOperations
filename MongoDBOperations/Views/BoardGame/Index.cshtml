@model IEnumerable<MongoDBOperations.Models.Game>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AverageMinutesDuration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinNumberOfPlayers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxNumberOfPlayers)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AverageMinutesDuration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinNumberOfPlayers)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxNumberOfPlayers)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
